---
import type { Playlist } from '@/lib/data';
import { Image } from 'astro:assets';

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;
const { id, cover, title, artists } = playlist;

const artistsString = artists.join(', ');
---

<a
  href={`/playlist/${id}`}
  class="playlist-item flex relative p-2 overflow-hidden items-center gap-5 rounded-md hover:bg-zinc-800">
  <picture class="size-12 flex-none">
    <Image
      src={cover}
      width="65"
      height="65"
      loading={'eager'}
      alt={`Cover of ${title} by ${artistsString}`}
      class="object-cover w-full h-full rounded-md"
    />
  </picture>

  <div class="flex flex-auto flex-col truncate">
    <h4 class="font-white text-sm">
      {title}
    </h4>

    <span class="text-xs text-gray-400">
      {artistsString}
    </span>
  </div>
</a>
